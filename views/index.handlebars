
<div class="container">
<div class="jumbotron">
    <h1 class="display-4">Burgers</h1>
    <p class="lead">Meat is murder. Delicious murder...</p>
</div>

    <div class="row">
        <div class="col-1"></div>
        <div class="col-4">
            <div id="not_eaten">
                <h2>Burgers I want to try</h2>
                <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                    <li>
                    {{name}}
                        <button class="change-state" data-id="{{id}}" data-status={{devoured}}>
                            Devour it!
                        </button>
                    </li>  
                    {{/unless}}
                {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-2"></div>

        <div class="col-4">
            <div id="eaten">
                <h2>Burgers I have tried</h2>
                <ul>
                {{#each burgers}}
                    {{#if devoured}}
                    <li>
                        {{name}}
                    </li>  
                    {{/if}}
                {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div> 

<div class="row">
    <div class="col"></div>
        <div class="col">
        <h2>Add a Burger you want to eat</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="burger_name">Burger Name:</label>
                    <input type="textarea" id="burger_name" name="name">
                </div>
                <button type="submit">Add Burger!</button>
            </form>
        </div>
    <div class="col"></div>
</div>